    content: '';
    display: block;
    height: 0;
    visibility: hidden;
    clear: both;
}
.detail-title {
  font-size: 32rpx;
  color: #191919;
  font-weight: 700;
  margin: 26rpx 0;
}
.intro-main {
  font-size: 28rpx;
