.detail-container {
  background-color: #F9F7F4;
  padding: 40rpx 30rpx;
}
.detail-box::after {
  content: '';
  height: 0;
  clear: both;
  display: block;
  visibility: hidden;
}
.detail-box .detail-box-img {
  float: left;
  width: 200rpx;
  height: 280rpx;
  border-radius: 8rpx;
  margin-right: 32rpx;
}
.detail-box-title {
  margin-bottom: 30rpx;
  font-size: 45rpx;
}
.detail-box-title .title-c {
    font-weight: 700;
}
.detail-box-title .title-e {
    color: #818181;
    font-size: 28rpx;
}
.box-right {
